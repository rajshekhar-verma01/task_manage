{
  "name": "taskflow-pro",
  "private": true,
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron . --dev\"",
    "clean": "rm -rf dist-electron && rm -rf dist",
    "clear-cache": "npx electron-builder install-app-deps --force && npm cache clean --force",
    "rebuild": "npm run clear-cache && electron-rebuild",
    "prebuild-electron": "npm run clean && npm run build",
    "build-electron": "npm run build && npx electron-builder install-app-deps && electron-builder --publish=never",
    "dist": "npm run prebuild-electron && electron-builder --publish=never",
    "dist-mac": "npm run prebuild-electron && electron-builder --mac --publish=never",
    "dist-win": "npm run prebuild-electron && electron-builder --win --publish=never",
    "dist-linux": "npm run prebuild-electron && electron-builder --linux --publish=never"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  }
}
